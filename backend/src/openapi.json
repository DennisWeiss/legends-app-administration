          "200": {
            "description": "POI created successfully"
          },
          "400": {
            "description": "Invalid content!"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "put": {
        "summary": "Update an existing POI",
        "tags": [
          "poi"
        ],
        "description": "",
        "operationId": "updatePOI",
        "requestBody": {
          "description": "POI object that needs to be added",
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "poi": {
                    "$ref": "#/definitions/POI"
                  },
                  "icon_default": {
                    "type": "string",
                    "format": "binary"
                  },
                  "icon_explored": {
                    "type": "string",
                    "format": "binary"
                  },
                  "image_preview": {
                    "type": "string",
                    "format": "binary"
                  },
                  "video_ar_scene": {
                    "type": "string",
                    "format": "binary"
                  },
                  "viode_icon_scene": {

  },
  "definitions": {
    "ApiMessage": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "description": "Message describing the error"
        }
      }
    },
    "POIOverview": {
      "type": "object",
      "properties": {
        "legends": {
          "$ref": "#/definitions/LegendsSpecificOverview",
          "description": "Maps to and object containing all legends and its version number"
        },
        "sights": {
          "$ref": "#/definitions/SightsSpecificOverview",
          "description": "Maps to and object containing all sights and its version number"
        },
        "restaurants": {
          "$ref": "#/definitions/RestaurantsSpecificOverview",
          "description": "Maps to and object containing all restaurants and its version number"
        }
      }
    },
    "LegendsSpecificOverview": {
      "type": "object",
      "properties": {
        "legends": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/POI"
          }
        },
        "version": {
          "type": "string",
          "example": "vl.1.0",
          "description": "Version number of all legends. Increases when a made to a legend is made."
        }
      }
    },
    "SightsSpecificOverview": {
      "type": "object",
      "properties": {
        "sights": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/POI"
          }
        },
        "version": {
          "type": "string",
          "example": "vs.1.0",
          "description": "Version number of all sights. Increases when a made to a sight is made."
        }
      }
    },
    "RestaurantsSpecificOverview": {
      "type": "object",
      "properties": {
        "restaurants": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/POI"
          }
        },
        "version": {
          "type": "string",
          "example": "vr.1.0",
          "description": "Version number of all restaurants. Increases when a made to a restaurant is made."
        }
      }
    },
    "POI": {
      "type": "object",
      "properties": {
        "coordinates": {
          "$ref": "#/definitions/Coordinates",
          "description": "Location of the POI"
        },
        "icons": {
          "type": "object",
          "properties": {
            "default": {
              "type": "string",
              "description": "Icon shown at default in app"
            },
            "explored": {
              "type": "string",
              "description": "Icon shown in app once it has been explored"
            }
          }
        },
        "media": {
          "$ref": "#/definitions/POIMedia"
        },
        "publishingTimestamp": {
          "type": "integer",
          "example": 1545747528,
          "description": "Unix epoch timestamp in seconds denoting when the POI should be published for users"
        },
        "key": {
          "type": "string",
          "description": "Unique key of the POI"
        },
        "name": {
          "$ref": "#/definitions/POIName",
          "description": "Name of the POI"
        },
        "beaconId": {
          "type": "integer",
          "example": 8,
          "description": "Internal Beacon ID"
        },
        "type": {
          "$ref": "#/definitions/POIType",
          "description": "Type denoting whether it is a `legend`, `sight` or `restaurants`"
        }
      }
    },
    "Coordinates": {
      "type": "object",
      "properties": {
        "lat": {
          "type": "number",
          "example": 51.15826
        },
        "lng": {
          "type": "number",
          "example": 14.992726
        }
      }
    },
    "POIMedia": {
      "type": "object",
      "properties": {
        "image": {
          "type": "object",
          "properties": {
            "preview": {
              "type": "string"
            },
            "video": {
              "type": "string",
              "properties": {
                "arScene": {
                  "type": "string"
                },
                "iconScene": {
                  "type": "string"
                }
              }
            },
            "vuforiaTargets": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "content": {
              "type": "object",
              "properties": {
                "explored": {
                  "$ref": "#/definitions/POIMediaContent"
                },
                "preview": {
                  "$ref": "#/definitions/POIMediaContent"
                },
                "puzzle": {
                  "$ref": "#/definitions/POIMediaHints"
                }
              }
            }
          }
        }
      }
    },
    "POIMediaContent": {
      "type": "object",
      "properties": {
        "heading": {
          "type": "string"
        },
        "index": {
          "type": "integer"
        },
        "type": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      }
    },
    "POIMediaHints": {
      "type": "object",
      "properties": {
        "heading": {
          "type": "string"
        },
        "hints": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "index": {
          "type": "integer"
        },
        "url": {
          "type": "string"
        }
      }
    },
    "POIName": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "example": {
        "de": "Der Sturz vom Kirchendach",
        "en": "Fall from the Church Roof",
        "pl": "Upadek z dachu koÅcioÅa"
      }
    },
    "POIType": {
      "type": "string",
      "enum": [
        "legends",
        "sights",
        "restaurants"
      ]
    },
    "User": {
      "type": "object",
      "properties": {
        "permissions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "_id": {
          "type": "string"
        },
        "username": {
          "type": "string"
        }
      }
    },
    "UserUpload": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "permissions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
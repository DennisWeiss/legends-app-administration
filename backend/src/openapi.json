    }
  },
  "definitions": {
    "ApiMessage": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        }
      }
    },
    "POIUpload": {
      "type": "object",
      "properties": {
        "publishingTimestamp": {
          "type": "integer",
          "example": 1545747528
        },
        "beaconId": {
          "type": "integer",
          "example": 4
        },
        "coordinates": {
          "$ref": "#/definitions/Coordinates"
        },
        "name": {
          "$ref": "#/definitions/POIName"
        }
      }
    },
    "POIOverview": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/POITypeSpecificOverview"
      }
    },
    "POITypeSpecificOverview": {
      "type": "object",
      "properties": {
        "legends": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/POI"
          }
        },
        "version": {
          "type": "string",
          "example": "vl.1.0"
        }
      }
    },
    "POI": {
      "type": "object",
      "properties": {
        "coordinates": {
          "$ref": "#/definitions/Coordinates"
        },
        "icons": {
          "type": "object",
          "properties": {
            "default": {
              "type": "string"
            },
            "explored": {
              "type": "string"
            }
          }
        },
        "media": {
          "$ref": "#/definitions/POIMedia"
        },
        "publishingTimestamp": {
          "type": "integer",
          "example": 1545747528
        },
        "key": {
          "type": "string"
        },
        "name": {
          "$ref": "#/definitions/POIName"
        },
        "beaconId": {
          "type": "integer",
          "example": 8
        },
        "type": {
          "$ref": "#/definitions/POIType"
        }
      }
    },
    "Coordinates": {
      "type": "object",
      "properties": {
        "lat": {
          "type": "number",
          "example": 51.15826
        },
        "lng": {
          "type": "number",
          "example": 14.992726
        }
      }
    },
    "POIMedia": {
      "type": "object",
      "properties": {
        "image": {
          "type": "object",
          "properties": {
            "preview": {
              "type": "string"
            },
            "video": {
              "type": "string",
              "properties": {
                "arScene": {
                  "type": "string"
                },
                "iconScene": {
                  "type": "string"
                }
              }
            },
            "vuforiaTargets": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "content": {
              "type": "object",
              "properties": {
                "explored": {
                  "$ref": "#/definitions/POIMediaContent"
                },
                "preview": {
                  "$ref": "#/definitions/POIMediaContent"
                },
                "puzzle": {
                  "$ref": "#/definitions/POIMediaHints"
                }
              }
            }
          }
        }
      }
    },
    "POIMediaContent": {
      "type": "object",
      "properties": {
        "heading": {
          "type": "string"
        },
        "index": {
          "type": "integer"
        },
        "type": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      }
    },
    "POIMediaHints": {
      "type": "object",
      "properties": {
        "heading": {
          "type": "string"
        },
        "hints": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "index": {
          "type": "integer"
        },
        "url": {
          "type": "string"
        }
      }
    },
    "POIName": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "example": {
        "de": "Der Sturz vom Kirchendach",
        "en": "Fall from the Church Roof",
        "pl": "Upadek z dachu kościoła"
      }
    },
    "POIType": {
      "type": "string",
      "enum": [
        "legends",
        "sights",
        "restaurants"
      ]
    },
    "User": {
      "type": "object",
      "properties": {
        "permissions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "_id": {
          "type": "string"
        },
        "username": {
          "type": "string"
        }
      }
    },
    "UserUpload": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "permissions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}